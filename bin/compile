#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

# use SOURCE_VERSION
BUILD_TIMESTAMP=`date +"%Y-%m-%d %T %z"`

# debug
echo "SOURCE_VERSION=$SOURCE_VERSION"
echo "BUILD_TIMESTAMP=$BUILD_TIMESTAMP"

if [ ! -d $1/.profile.d ]; then
  mkdir $1/.profile.d/
fi

echo "#!/bin/sh" > $1/.profile.d/stamp.sh
echo "export SOURCE_VERSION=$SOURCE_VERSION" >> $1/.profile.d/stamp.sh
echo "export BUILD_TIMESTAMP=\"$BUILD_TIMESTAMP\"" >> $1/.profile.d/stamp.sh
